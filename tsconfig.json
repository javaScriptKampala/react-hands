{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es6",
    "lib": [
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "composite": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
  "plugins": [
    {
      "name": "typescript-transform-paths",
      "tsconfig": "tsconfig.json"
    }
  ]
}